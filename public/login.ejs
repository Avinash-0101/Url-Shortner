<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans">
    <!-- Container -->
    <div class="flex items-center justify-center min-h-screen">
        <!-- Login Card -->
        <div class="bg-white shadow-lg rounded-lg p-8 max-w-sm w-full">
            <!-- Header -->
            <h1 class="text-2xl font-bold text-blue-600 text-center mb-6">Login</h1>

            <!-- Form -->
            <form action="/user/Login" method="post" class="space-y-4">
                <!-- Email -->
                <div>
                    <label for="email" class="block text-sm font-medium text-gray-700 mb-1">
                        Email
                    </label>
                    <input 
                        type="text" 
                        id="email" 
                        name="email" 
                        required 
                        class="w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring focus:ring-blue-300"
                        placeholder="Enter your email"
                    />
                </div>

                <!-- Password -->
                <div>
                    <label for="password" class="block text-sm font-medium text-gray-700 mb-1">
                        Password
                    </label>
                    <input 
                        type="password" 
                        id="password" 
                        name="password" 
                        required 
                        class="w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring focus:ring-blue-300"
                        placeholder="Enter your password"
                    />
                </div>

                <!-- Submit Button -->
                <div>
                    <button 
                        type="submit"
                        class="w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600 transition duration-200">
                        Login
                    </button>
                </div>
            </form>

            <!-- Footer -->
            <div class="text-center mt-4">
                <p class="text-sm text-gray-600">
                    Don't have an account? 
                    <a href="/signup" class="text-blue-500 font-medium hover:underline">Sign Up</a>
                </p>
            </div>
        </div>
    </div>
</body>
</html>
